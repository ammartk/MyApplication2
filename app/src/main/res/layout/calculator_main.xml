<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
        android:id="@+id/textBox"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_marginHorizontal="10sp"
            android:text="DEL"
            android:textSize="13pt"
            android:id="@+id/buttonDel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonDel"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRow1"
        android:padding="7sp"
        >
        <Button
            android:text="7"
            android:textSize="13pt"
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20sp"
            android:onClick="button7"/>

        <Button
            android:text="8"
            android:textSize="13pt"
            android:onClick="button8"
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20sp"
            android:layout_marginStart="5sp"/>
        <Button
            android:text="9"
            android:textSize="13pt"
            android:onClick="button9"
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20sp"
            android:layout_marginStart="5sp"/>
        <Button
            android:text="+"
            android:textSize="13pt"
            android:onClick="buttonAdd"
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20sp"
            android:layout_marginStart="5sp"/>


    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRow2"
        android:padding="5sp"
        >
        <Button
            android:text="4"
            android:textSize="13pt"
            android:onClick="button4"
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20sp"/>
        <Button
            android:text="5"
            android:textSize="13pt"
            android:onClick="button5"
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20sp"
            android:layout_marginStart="5sp"/>
        <Button
            android:text="6"
            android:textSize="13pt"
            android:onClick="button6"
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20sp"
            android:layout_marginStart="5sp"/>
        <Button
            android:text="-"
            android:textSize="13pt"
            android:onClick="buttonSub"
            android:id="@+id/buttonSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20sp"
            android:layout_marginStart="5sp"/>


    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRow3"
        android:padding="5sp"
        >
        <Button
            android:text="1"
            android:textSize="13pt"
            android:onClick="button1"
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20sp"/>
        <Button
            android:text="2"
            android:textSize="13pt"
            android:onClick="button2"
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20sp"
            android:layout_marginStart="5sp"/>
        <Button
            android:text="3"
            android:textSize="13pt"
            android:onClick="button3"
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20sp"
            android:layout_marginStart="5sp"/>
        <Button
            android:text="*"
            android:textSize="13pt"
            android:onClick="buttonMul"
            android:id="@+id/buttonMul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20sp"
            android:layout_marginStart="5sp"/>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRow4"
        android:padding="5sp"
        >
        <Button
            android:text="."
            android:textSize="13pt"
            android:onClick="buttonDot"
            android:id="@+id/buttonDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20sp"/>

        <Button
            android:text="0"
            android:textSize="13pt"
            android:onClick="button0"
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20sp"
            android:layout_marginStart="5sp"/>
        <Button
            android:text="="
            android:textSize="13pt"
            android:onClick="buttonEq"
            android:id="@+id/buttonEq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20sp"
            android:layout_marginStart="5sp"/>
        <Button
            android:text="/"
            android:textSize="13pt"
            android:onClick="buttonDiv"
            android:id="@+id/buttonDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20sp"
            android:layout_marginStart="5sp"/>


    </LinearLayout>
</LinearLayout>